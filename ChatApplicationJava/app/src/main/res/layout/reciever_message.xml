<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constrainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/reciever_text"
    android:layout_alignParentLeft="true"
    android:layout_margin="5sp"
    android:maxWidth="300dp"
    android:maxHeight="600dp"
    android:minHeight="45dp"
    android:minWidth="60dp">

    <TextView
        android:id="@+id/userName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/reciever_message"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/reciever_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Message Here"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/userName2"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/timeText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21:04"
        android:textSize="13sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintTop_toBottomOf="@+id/reciever_message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/reciever_message"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>